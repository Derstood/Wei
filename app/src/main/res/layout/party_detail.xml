        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★" android:textSize="32dp"  android:textColor="@color/HuaweiYellow"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★" android:textSize="32dp"  android:textColor="@color/HuaweiYellow"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★" android:textSize="32dp"  android:textColor="@color/HuaweiYellow"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="★" android:textSize="32dp"  android:textColor="@color/HuaweiYellow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5.0分   宣讲"
            />
    </LinearLayout>


</LinearLayout>